# Shared secret used for validating incoming webhook signatures (you define this in app store connect)
SHARED_SECRET=your_shared_secret_here

# Microsoft Teams Incoming Webhook URL (keep real URL private!)
TEAMS_WEBHOOK_URL=https://your-teams-webhook-url

# Slack Incoming Webhook URL (keep real URL private!)
SLACK_WEBHOOK_URL=https://your-slack-webhook-url

# Optional: App Store app listing URL
APP_STORE_URL=https://apps.apple.com/app/your-app-id

# Optional: Preferred timezone (e.g., Europe/Athens, UTC)
TIMEZONE=UTC

# Slack Incoming Webhook URL (keep real URL private!)
SLACK_WEBHOOK_URL=https://your-slack-webhook-url